@using ASP.NET_StoreManagement.Models;
@model IEnumerable<Product>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayOut.cshtml";
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<div class="btnAddNewProduct" style="text-align:right;">
    @Html.ActionLink("Thêm sản phẩm", "AddProduct", "ProductManager", null, new { @class = "btn btn-success" })
</div>

<hr/>

@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHeader",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAlRow",
    columns: grid.Columns(
        grid.Column("Id", "Mã sản phẩm"),
        grid.Column("DisplayName", "Tên sản phẩm"),
        grid.Column("Image", "Hình ảnh", format: p => Html.Raw("<img src=\"../Content/HinhAnhSP/" + p.Image + "\" width=\"150\" height=\"100\"/>")),
        grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "UpdateProduct", new { Id = p.Id })),
        grid.Column(format: p => @Html.ActionLink("Xóa", "DeleteProduct", new { Id = p.Id }))
        )
        )

@*Css cho từng Style của table*@
<style>

    .gridTable {
        width: 100%;
        border: 1px solid #999999;
    }

        .gridTable td {
            border: 1px solid #999999;
        }

    .gridHeader {
        background-color: Green;
    }

        .gridHeader a {
            color: #fff;
        }

    .gridFooter {
        font-weight: bold;
    }
</style>

<style>
    .FooterAdmin {
        display: none;
    }
</style>


