@using ASP.NET_StoreManagement.Models
@model IEnumerable<Product>

@foreach (var item in Model.Take(3))
{
    <div class="col-md-4 grid-top">
        <a href="@Url.Action("ProductDetail", "Product", new { id = item.Id})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+item.Image)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left  b-delay03 " style="text-align:left;font-size:15pt;">
                    @Html.Raw(item.Configuration)
                </h3>
            </div>
        </a>


        <p><a href="single.html">@item.DisplayName</a></p>
    </div>
}
<div class="clearfix"> </div>


