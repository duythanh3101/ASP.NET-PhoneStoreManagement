@using ASP.NET_StoreManagement.Models
@model IEnumerable<Product>


<style>
    .text-font-size-10 {
        font-size: 10pt;
        text-align: left;
    }

    .text-font-size-5 {
        font-size: 5pt;
        text-align: left;
    }

    .text-font-size-8 {
        font-size: 8pt;
        text-align: left;
    }

    .text-font-size-8 {
        font-size: 8pt;
        text-align: left;
    }
</style>
<div class="col-md-6 men">
    <a href="@Url.Action("ProductDetail", "Product", new { id = Model.ElementAt(0).Id})" class="b-link-stripe b-animate-go  thickbox">
        <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+Model.ElementAt(0).Image)" alt="">
        <div class="b-wrapper">
            <h3 class="b-animate b-from-top top-in   b-delay03  text-font-size-10  ">
                <span> @Html.Raw(Model.ElementAt(0).Configuration) </span>
            </h3>
        </div>
    </a>
    <h3>@Model.ElementAt(0).DisplayName</h3>

</div>
<div class="col-md-6">
    <div class="col-md1 ">
        <a href="@Url.Action("ProductDetail", "Product", new { id = Model.ElementAt(1).Id})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+Model.ElementAt(1).Image)" alt="">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-top top-in1   b-delay03 text-font-size-8  ">
                    <span> @Html.Raw(Model.ElementAt(1).Configuration) </span>
                </h3>
            </div>
        </a>
        <h3>@Model.ElementAt(1).DisplayName</h3>
    </div>
    <div class="col-md2">
        <div class="col-md-6 men1">
            <a href="@Url.Action("ProductDetail", "Product", new { id = Model.ElementAt(2).Id})" class="b-link-stripe b-animate-go  thickbox">
                <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+Model.ElementAt(2).Image)" alt="">

                <div class="b-wrapper">
                    <h3 class="b-animate b-from-top top-in2   b-delay03 text-font-size-5   ">
                        <span> @Html.Raw(Model.ElementAt(2).Configuration) </span>
                    </h3>
                </div>
            </a>
            <h3>@Model.ElementAt(2).DisplayName</h3>
        </div>
        <div class="col-md-6 men2">
            <a href="single.html" class="b-link-stripe b-animate-go  thickbox ">
                <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/"+Model.ElementAt(3).Image)" alt="">

                <div class="b-wrapper">
                    <h3 class="b-animate b-from-top top-in2   b-delay03 text-font-size-5 ">
                        <span> @Html.Raw(Model.ElementAt(3).Configuration) </span>
                    </h3>
                </div>
            </a>
            <h3>@Model.ElementAt(3).DisplayName</h3>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>
<div class="clearfix"> </div>
