@using ASP.NET_StoreManagement.Models;
@using PagedList.Mvc;
@using PagedList;

@model IPagedList<Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Layout/ProductDetailLayout.cshtml";
}

@using (Ajax.BeginForm("SearchTextByAjax", "Search", new AjaxOptions {UpdateTargetId = "divProductListView", InsertionMode = InsertionMode.Replace }))
{
    <div class="search">
        <input type="text" id="txtSearchText" value="" name="searchText" placeholder="Nhập vào tên sản phẩm cần tìm..." />
        <input type="submit" id="btnSearch" value="Tìm kiếm" />
    </div>
}

<br /><br /><br /><br />
<div style="clear:both"></div>

<div id="divProductListView" class="col-md-12 product1">
    <div class=" bottom-product">
        @foreach (var item in Model.OrderBy(d => d.DisplayName))
        {
            <div class="col-md-4 bottom-cd simpleCart_shelfItem">
                <div class="product-at ">
                    <a href="single.html">
                        <img class="img-responsive" src="@Url.Content("~/Content/HinhAnhSP/" + item.Image)" alt=""
                             style="width:150px;height:150px">
                        <div class="pro-grid">
                            @Ajax.RawActionLink(string.Format("<span class=\"buy-in\">Thêm vào giỏ</span>"), "AddProductAjax", "Basket", new { @Id = item.Id, @directURL = Request.Url.ToString() }, new AjaxOptions
                            {
                                HttpMethod = "GET",
                                UpdateTargetId = "divBasketPartial",
                                InsertionMode = InsertionMode.Replace,
                            }, null)
                        </div>
                    </a>
                </div>
                <p class="tun">@item.DisplayName</p>
                @Ajax.RawActionLink(string.Format("<p class=\"number item_price\"><i> </i>{0}</p>", item.UnitPrice.Value.ToString("#,##")), "AddProductAjax", "Basket", new { @Id = item.Id, @directURL = Request.Url.ToString() }, new AjaxOptions
                {
                   HttpMethod = "GET",
                   UpdateTargetId = "divBasketPartial",
                   InsertionMode = InsertionMode.Replace,
                }, new { @class = "item_add" })

            </div>
        }

        <div class="clearfix"> </div>

        <div class="divPage">
            @Html.PagedListPager(Model, page => Url.Action("Search", new { page = page, @searchText = ViewBag.SearchText }), new PagedListRenderOptions() { DisplayPageCountAndCurrentLocation = true })
        </div>
    </div>
</div>


<style>
    #btnSearch {
        background-color: #4cae4c;
        color: #fff;
        padding: 0;
        font-size: 1.1em;
        font-weight: 600;
        margin-right: 0;
        border-radius: 0;
        -webkit-border-radius: 3px;
        -moz-border-radius: 3px;
        -o-border-radius: 3px;
        outline: none;
        border: none;
        cursor: pointer;
        position: absolute;
        left: 304px;
        padding: 3px;
    }

    #txtSearchText {
        width: 300px;
        border: 1px solid #000;
    }
</style>