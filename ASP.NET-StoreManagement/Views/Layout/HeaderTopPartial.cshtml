@using ASP.NET_StoreManagement.Models;

<div class="header-top">
    <div class="container">
        <div class="search">
            <form>
                <input type="text" value="Search " onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                <input type="submit" value="Go">
            </form>
        </div>
        <div class="header-left">
            <ul>
                @if (Session["Account"] != null && Session["Account"].ToString() != "")
                {
                    User user = (User)Session["Account"];
                    <li><a>Chào @user.FullName</a></li>
                    <li><a>@Html.ActionLink("Đăng xuất", "Logout", "Home")</a></li>
                }
                else
                {
                    <li><a id="btnDangNhap" href="#">Đăng nhập</a></li>
                    <li><a href="@Url.Action("Register", "Home")">Đăng ký</a></li>
                }


            </ul>
            <div class="cart box_1">
                <a href="checkout.html">
                    <h3>
                        <div class="total">
                            <span class="simpleCart_total">$0.00</span> (<span id="simpleCart_quantity" class="simpleCart_quantity">0</span> items)
                        </div>
                        <img src="~/Content/images/cart.png" alt="">
                    </h3>
                </a>
                <p><a href="javascript:;" class="simpleCart_empty">Empty Cart</a></p>

            </div>
            <div class="clearfix"> </div>
        </div>
        <div class="clearfix"> </div>
    </div>
</div>


<link href="~/Content/css/style_login.css" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link href="http://fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet" type="text/css">

<div id="popup_login">
    <h1>Slide Login form</h1>
    <div class="header-main">
        <div style="clear:both;text-align:right;margin-bottom:10px;">
            <span id="close-form" class="btn btn-danger">X</span>
        </div>
        <div class="header-left-bottom">
            @using (Ajax.BeginForm("Login", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId= "LoginNotify" }))
            {
                <div class="icon1">
                    <span class="fa fa-user"></span>
                    <input id="txtTaiKhoan" name="UserName" type="text" placeholder="Tài khoản" required="">
                </div>
                <div class="icon1">
                    <span class="fa fa-lock"></span>
                    <input id="txtMatKhau" name="Password" type="password" placeholder="Mật khẩu" required="">
                </div>
                <div>
                    <label style="color:red; font-size:15px;" id="LoginNotify"></label>
                </div>
                <div class="login-check">
                    <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i> Keep me logged in</label>
                </div>
                <div class="bottom">
                    @*<button id="btnLogin" type="submit" class="btn">Log In</button>*@
                    <input value="Đăng nhập" type="submit" class="LoginButton" id="btnLogin">
                </div>
                <div class="links">
                    <p><a href="#">Forgot Password?</a></p>
                    <p class="right"><a href="#">New User? Register</a></p>
                    <div class="clear"></div>
                </div>
            }

        </div>
        <div class="social">
            <ul>
                <li>or login using : </li>
                <li><a href="#" class="facebook"><span class="fa fa-facebook"></span></a></li>
                <li><a href="#" class="twitter"><span class="fa fa-twitter"></span></a></li>
                <li><a href="#" class="google"><span class="fa fa-google-plus"></span></a></li>
            </ul>
        </div>
    </div>

</div>



<style>
    .LoginButton {
        background: #007cc0;
        color: #fff;
        font-size: 15px;
        text-transform: uppercase;
        padding: .8em 2em;
        letter-spacing: 1px;
        transition: 0.5s all;
        -webkit-transition: 0.5s all;
        -moz-transition: 0.5s all;
        -o-transition: 0.5s all;
        display: inline-block;
        cursor: pointer;
        outline: none;
        border: none;
        width: 100%;
    }

    /*css cho phần div popup_login*/
    #popup_login {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,.5);
        z-index: 999;
        display: none;
    }
</style>

<script type="text/javascript">
    $("#btnDangNhap").click(function () {
        $("#popup_login").fadeIn(500);
    });

    $("#close-form").click(HideForm);

    //Định nghĩa function ẩn form
    function HideForm() {
        $("#popup_login").hide();
